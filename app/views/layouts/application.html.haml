!!! 5
%html
  %head
    %title= 'Isotope11 Asset Tracker:' + yield(:title)
    %meta{"content" => "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'jquery-ui-1.8.5.custom'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = yield :head

  %body
    %header
      .container
        %h1{:role => "banner"}
          %a{:href => "/"}
            %span Isotope Eleven
      %nav
        .container
          = render :partial => "shared/menu"
    .container
      - if flash[:error]
        %p#flash_error= flash[:error]
      %section
        %article= yield
      = (content_column_right = yield :content_column_right).empty? ? render(:partial => 'shared/sidebar') : content_column_right
      .clear
    %footer
      .container
        %p &copy; Isotope11 2010
    .container= render :partial => "shared/javascripts"
