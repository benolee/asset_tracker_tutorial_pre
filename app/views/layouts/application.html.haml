!!! 5
%html
  %title= 'Isotope11 Asset Tracker:' + yield(:title)
  %head
    %meta{"content" => "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = yield :head
  %body
    #page
      %h1{:role => "banner"}
        %a{:href => "/"} Isotope Eleven
      %nav= render :partial => "shared/menu"
      %section
        %article= yield
        %aside= (content_column_right = yield :content_column_right).empty? ? render(:partial => 'shared/sidebar') : content_column_right
      %footer
        %p &copy; Isotope11 2010
    = render :partial => "shared/javascripts"
