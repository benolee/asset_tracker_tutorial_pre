!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= 'Isotope11 Asset Tracker:' + yield(:title)
    %meta{"content" => "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'jquery-ui-1.8.5.custom'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = yield :head
  %body
    #header
      .wrapper
        %h1
          %a{:href => "/"}
            %span Isotope Eleven
      #nav
        .wrapper= render :partial => "shared/menu"
    #content
      .wrapper
        = render :partial => "shared/flashes"
        .yui3-g
          - if (content_column_right = yield :content_column_right).empty?
            .yui3-u-1= yield
          - else
            .yui3-u-4-5= yield
            .yui3-u-1-5= yield :content_column_right
    #footer
      .wrapper
        %p &copy; Isotope11 2010
    = render :partial => "shared/javascripts"
