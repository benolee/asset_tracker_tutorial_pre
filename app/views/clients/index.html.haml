.yui3-g
  .yui3-u-1
    %h2 All Clients
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        %table.clients
          %thead
            %tr
              %th Name
              %th Initials
              %th Projects
              %th Tickets
              %th Status
              -if admin?
                %th Edit
          %tbody
            - @clients.each do |client|
              %tr
                %td= link_to client, client
                %td= client.initials
                %td= client.projects.count
                %td= client.tickets.count
                %td= client.status
                -if admin?
                  %td= link_to 'Edit', edit_client_path(client)
        = link_to "New Client", new_client_path, :class => "add_new_button" if admin?

