.module-wrap
  .module-full-container
    .module
      %h1 All Clients
      = link_to "New Client", new_client_path, :class => "add_new_button"
      %table.clients
        %thead
          %tr
            %th Name
            %th Initials
            %th Projects
            %th Tickets
            %th Status
        %tbody
          - @clients.each do |client|
            %tr
              %td= link_to client, client
              %td= client.initials
              %td= link_to client.projects.count, client_projects_path(client)
              %td= link_to client.tickets.count
              %td= link_to client.status, edit_client_path(client)

