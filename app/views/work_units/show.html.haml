.yui3-g
  .yui3-u-1
    %h2= "#{@work_unit.client}: #{@work_unit.project} - #{@work_unit.ticket}"
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        %ul.subnav
          - if (@work_unit.user == current_user) || admin?
            %li= link_to t(:edit), edit_work_unit_path
          %li= link_to "#{t(:back_to_ticket)}: #{@work_unit.ticket}", ticket_path(@work_unit.ticket)
          %li= link_to "#{t(:back_to_project)}: #{@work_unit.project}", project_path(@work_unit.project)
          %li= link_to "#{t(:back_to_client)}: #{@work_unit.client}", client_path(@work_unit.client)
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        #work_unit
          %h3= t(:creator)
          %p= @work_unit.user
          %h3= t(:hours)
          %p= @work_unit.hours
          %h3= t(:hours_type)
          %p= @work_unit.hours_type
          %h3= t(:description)
          %p.description= @work_unit.description

