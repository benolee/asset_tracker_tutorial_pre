= form_for([@client, @project, @ticket, @work_unit]) do |f|
  - if @work_unit.errors.any?
    #error_explanation
      %h2
        = pluralize(@work_unit.errors.count, "error")
        prohibited this work_unit from being saved:

      %ul
      - @work_unit.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :hours
    %br
    = f.text_field :hours
  .field
    = f.label :scheduled_at
    %br
    = f.text_field :scheduled_at
  .actions
    = f.submit
    or
    = link_to 'Cancel', ticket_work_unit_path
