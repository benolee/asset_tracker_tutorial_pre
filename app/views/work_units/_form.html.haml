= form_for([@client, @project, @ticket, @work_unit]) do |f|
  - if @work_unit.errors.any?
    #error_explanation
      %h2
        = pluralize(@work_unit.errors.count, "error")
        prohibited this work_unit from being saved:

      %ul
      - @work_unit.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :description
    %br
    = f.text_field :description
  .actions
    = f.submit

