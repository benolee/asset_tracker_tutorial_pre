%table.tickets
  %thead
    %tr
      %th Name
      %th
      %th
  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= link_to ticket, client_project_ticket_path(@client, @project, ticket)
        %td= link_to 'Edit', edit_client_project_ticket_path(@client, @project, ticket)
        %td= link_to 'Destroy', client_project_ticket_path(@client, @project, ticket), :method => :delete

= link_to "New Ticket", new_client_project_ticket_path(@client, @project)
