.module-wrap
  .module-gradient-container
    .module
      #project
        %h2= @project.to_s

        .links
          = link_to "Edit", edit_client_project_path(@client, @project)
          |
          = link_to "Tickets", project_tickets_path(@project)
          |
          = link_to "Back to client: #{@client}", client_path(@client)
        %br

        %table
          %thead
            %tr
              %th Comments
          %tbody
            - @project.comments.each do |c|
              %tr
                %td= c.comment
        = render :partial => "projects/comment_form", :locals => { :commentable_id => @project.id, :commentable_field => "project_id", :commentable_type => "Project", :refurl => client_project_path(@project), :comment_num => @project.id }


