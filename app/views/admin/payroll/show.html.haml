.yui3-g
  .yui3-u-1
    %h2= "Payroll: #{@user}"
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        %p= text_field_tag "autofill_all"
        - form_tag(admin_payroll_path, :method => 'put', :multipart => true) do
          = submit_tag 'Submit'
          - @clients.each do |client|
            %table
              %thead
                %tr
                  %th{:colspan => 4}= 'Company: ' + client.to_s
                  %th= text_field_tag "autofill_client_#{client.id}", nil, :class => "autofill_client"
                %tr
                  %th Description
                  %th Work Date
                  %th Hours
                  %th Overtime?
                  %th Check Number
              %tbody
                - @work_units.each do |wu|
                  - if wu.ticket.project.client == client
                    %tr{ :class => cycle("odd", "even") }
                      %td= wu.description
                      %td= wu.created_at.strftime("%Y/%m/%d")
                      %td= wu.hours
                      %td
                        - if wu.overtime?
                          yes
                      %td= text_field_tag "work_unit[#{wu.id}]", nil, :class => "global autofill_client_#{client.id}"
              %tfoot
                %tr
                  %td{:colspan => 4} Total
                  %td= @work_units.select { |x| x.client == client }.sum(&:hours)
          = submit_tag 'Submit'
        %h4= 'Total For Pay Period: ' + @work_units.sum(:hours).to_s + ' hours'


    - content_for :javascripts do
      :javascript
        $(document).ready(function() {

          $("#autofill_all").keyup(function() {
            value = $("#autofill_all").val();
            $(".global").each(function() {
              this.value = value;
            });
          });

          $(".autofill_client").keyup(function() {
            value = this.value
            $("." + this.id).each(function() {
              this.value = value;
            });
          });

        });


