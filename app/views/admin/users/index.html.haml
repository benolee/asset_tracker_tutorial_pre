.module-wrap
  .module-full-container
    .module
      %h1
        All Users

      %table.users
        %thead
          %tr
            %th Name
            %th Email
            %th
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td= link_to (user.first_name+ " " + user.last_name), admin_user_path(user)
              %td= user.email
              %td= link_to 'Edit', edit_admin_user_path(user)
              %td= button_to 'Destroy', [:admin, user], { :confirm => "Are you sure?", :method => :delete }

      = link_to "New User", new_admin_user_path, :class => "add_new_button"
