.module-wrap
  .module-full-container
    .module
      %h1
        All Users

      = button_to "New User", new_admin_user_path, :method => :get
      %table.users
        %thead
          %tr
            %th Name
            %th Email
            %th Locked?
            %th Roles
        %tbody
          - @users.each do |user|
            %tr
              %td= link_to (user.first_name+ " " + user.last_name), admin_user_path(user)
              %td= user.email
              %td
                - if user.locked_at?
                  Locked
              %td
                %ul
                  - user.roles.each do |role|
                    %li= role.name

      = link_to "New User", new_admin_user_path, :class => "add_new_button"
