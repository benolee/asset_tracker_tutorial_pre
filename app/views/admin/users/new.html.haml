.module-wrap
  .module-gradient-container
    .module
      %h1 New user

      = form_for @user, :url => admin_users_path do |f|
        = f.label :first_name
        = f.text_field :first_name
        %br/
        = f.label :last_name
        = f.text_field :last_name
        %br/
        = f.label :middle_initial
        = f.text_field :middle_initial
        %br/
        = f.label :email
        = f.text_field :email
        %br/
        = f.label :password
        = f.password_field :password
        %br/
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        %br/
        = f.submit 'Create'

      = link_to 'Cancel', admin_users_path
