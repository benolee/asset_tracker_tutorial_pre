.yui3-g
  .yui3-u-1
    %h2= t(:site_settings)
.yui3-g
  .yui3-u-1
    .gradient_border_wrap
      .gradient_border_content
        = form_for :admin_site_settings, @site_settings, :url => { :action => "update" }, :html => { :method => "put" } do |f|
          .field_wrap
            = f.label :overtime_multiplier
            = f.text_field :overtime_multiplier
          .field_wrap
            = f.submit 'Update', :class => 'add_new_button'
            = link_to 'Cancel', admin_path, :class => 'cancel_button'

